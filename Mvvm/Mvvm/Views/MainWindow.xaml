<Window
    x:Class="Mvvm.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    Title="{Binding Title}"
    Width="700"
    Height="500"
    prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <!--  Grid 속성 요소는 반드시 첫 번째 위치해야 함  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="100*" />
            <RowDefinition Height="100*" />
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>

        <!--  ContentControl 위치 이동  -->
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />

        <Rectangle Fill="{StaticResource AccentBackground}" />
        <Rectangle
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Fill="{StaticResource ToolBarMenu}" />

        <Button
            x:Name="HomeButton"
            Grid.Column="1"
            Margin="25,25,25,25"
            Command="{Binding ShowMessageCommand}"
            Content="Button" />

        <Button
            x:Name="AButton"
            Grid.Column="2"
            Margin="25,25,25,25"
            Command="{Binding ShowMessageCommand}"
            Content="Button" />

        <Button
            x:Name="BButton"
            Margin="25,25,25,25"
            Command="{Binding ShowMessageCommand}"
            Content="Button" />


    </Grid>
</Window>