<Window
    x:Class="Mvvm.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="{Binding Title}"
    Width="800"
    Height="600"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="av">

    <Grid Height="600" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Frame
            Grid.Row="0"
            Grid.Column="0"
            Background="#FFA0A0A0" />

        <!--  버튼  -->

        <Button
            Grid.Row="0"
            Width="100"
            Margin="0,0,200,0"
            HorizontalAlignment="Right"
            Command="{Binding NavigateToParameterWindowCommand}"
            Content="Data"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"
            Style="{StaticResource MaterialDesignRaisedLightButton}"
            ToolTip="데이터 확인" />

        <Button
            Grid.Row="0"
            Width="100"
            Margin="0,0,20,0"
            HorizontalAlignment="Right"
            Command="{Binding NavigateToSettingWindowCommand}"
            Content="Setting"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"
            Style="{StaticResource MaterialDesignRaisedLightButton}"
            ToolTip="데이터 확인" />

        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="ContentRegion" />

        <Button
            Margin="170,0,0,0"
            HorizontalAlignment="Left"
            Command="{Binding PortConnectButton}"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"
            Style="{StaticResource MaterialDesignFloatingActionLightButton}"
            ToolTip="MaterialDesignFloatingActionLightButton">
            <materialDesign:PackIcon
                Width="30"
                Height="30"
                Kind="Network" />
        </Button>
        <ComboBox
            x:Name="PortComboBox"
            Width="120"
            Margin="20,24,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectedItem="{Binding SelectPort}" />
    </Grid>
</Window>
