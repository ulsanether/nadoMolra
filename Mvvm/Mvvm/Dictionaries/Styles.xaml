<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Mvvm.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- 리스트 형식 템플릿 -->
    <DataTemplate x:Key="ListTemplate">
        <StackPanel Margin="5" Orientation="Horizontal">
            <TextBlock Width="100" VerticalAlignment="Center" Text="{Binding Label}" />
            <TextBox Width="100" Text="{Binding DefaultActual}" />
            <Button Width="80" Command="{Binding ApplyCommand}" Content="Apply" />
        </StackPanel>
    </DataTemplate>

    <!-- 카드 형식 템플릿 -->
    <DataTemplate x:Key="CardTemplate">
        <materialDesign:Card Width="200" Padding="10" Background="#03a9f4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Margin="10,10,10,4" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="{Binding Label}" />
                <Separator Grid.Row="1" Style="{StaticResource MaterialDesignLightSeparator}" />
                <StackPanel Grid.Row="2" Margin="10,0,10,8">
                    <TextBox Width="150" Text="{Binding DefaultActual}" />
                    <Button Width="80" Margin="5,5,0,0" Command="{Binding ApplyCommand}" Content="Apply" />
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </DataTemplate>

    <!-- DataTemplateSelector 등록 -->
    <local:ParameterTemplateSelector x:Key="ParameterTemplateSelector"
                                     CardTemplate="{StaticResource CardTemplate}"
                                     ListTemplate="{StaticResource ListTemplate}" />

</ResourceDictionary>
